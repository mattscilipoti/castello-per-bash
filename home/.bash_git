#see: http://richardhulse.blogspot.com/2008/06/using-git.html
#see: http://blog.ericgoodwin.com/2008/4/10/auto-completion-with-git

# [[ $- == *i* ]]   &&   . ~/bin/git-prompt.sh

if [ -f ~/lib/.git-completion.bash ]; then
  source ~/lib/.git-completion.bash

#  TODO: Once Bash 4 is available,
#   Replace the following mess with
#    PROMPT_DIRTRIM=20
  PS1='\[\033]0;\w\007\][`__git_ps1`] '$PS1
  #prompt: title=>full path, promt=>[git branch] last dir

fi

#auto complete bash aliases
complete -o default -o nospace -F _git_branch gb
complete -o default -o nospace -F _git_checkout gco


if [ -f ~/.profile-git ]; then
    source ~/.profile-git
fi
